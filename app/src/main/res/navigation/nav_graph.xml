<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/userListFragment">

    <fragment
        android:id="@+id/userListFragment"
        android:name="com.example.useradministration.presenter.UserListFragment"
        android:label="lister"
        tools:layout="@layout/fragment_user_list">
        <action
            android:id="@+id/action_userListFragment_to_userRegisterFragment"
            app:destination="@id/userRegisterFragment">
            <argument
                android:name="user"
                app:argType="com.example.useradministration.User" />
        </action>
    </fragment>

    <fragment
        android:id="@+id/userRegisterFragment"
        android:name="com.example.useradministration.presenter.UserRegisterFragment"
        android:label="register"
        tools:layout="@layout/fragment_user_registration">

        <argument
            android:name="user"
            android:defaultValue="@null"
            app:argType="com.example.useradministration.User"
            app:nullable="true" />

    </fragment>

</navigation>